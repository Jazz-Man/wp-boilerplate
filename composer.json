{
  "name": "jazzman/wp-boilerplate",
  "type": "project",
  "license": "MIT",
  "description": "WordPress boilerplate with modern development tools, easier configuration, and an improved folder structure",
  "homepage": "https://roots.io/bedrock/",
  "authors": [
    {
      "name": "Scott Walkinshaw",
      "email": "scott.walkinshaw@gmail.com",
      "homepage": "https://github.com/swalkinshaw"
    },
    {
      "name": "Ben Word",
      "email": "ben@benword.com",
      "homepage": "https://github.com/retlehs"
    }
  ],
  "keywords": [
    "bedrock", "composer", "roots", "wordpress", "wp", "wp-config"
  ],
  "support": {
    "issues": "https://github.com/roots/bedrock/issues",
    "forum": "https://discourse.roots.io/category/bedrock"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=7.2",
    "jaybizzle/crawler-detect": "^1.2",
    "jazzman/wp-geoip": "^0.1.1",
    "jazzman/wp-mail": "^1.3",
    "jazzman/wp-object-cache": "^2.1",
    "jazzman/wp-performance": "^2.2",
    "oscarotero/env": "^1.2",
    "roots/wordpress": "^5.9",
    "roots/wp-config": "^1.0",
    "roots/wp-password-bcrypt": "^1.1",
    "vlucas/phpdotenv": "^4.1"
  },
  "require-dev": {
    "dg/composer-cleaner": "^2.2",
    "roave/security-advisories": "dev-master",
    "symfony/var-dumper": "^5.4"
  },
  "replace": {
    "symfony/polyfill-mbstring": "*",
    "symfony/polyfill-ctype": "*",
    "symfony/polyfill-php80": "*"
  },
  "config": {
    "sort-packages": true,
    "preferred-install": "dist",
    "optimize-autoloader": true,
    "classmap-authoritative": true,
    "apcu-autoloader": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp",
    "cleaner-ignore":{
      "yoast/api-libs": true
    }
  },
  "autoload": {
    "psr-4": {
      "JazzMan\\Themes\\":"web/app/themes/boilerplate/includes"
    },
    "files": [
      "web/app/themes/boilerplate/includes/helper.php"
    ]
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "post-autoload-dump": [
      "rm -rf web/wp/wp-content/themes/twenty*"
    ],
    "deploy": [
      "@clearNodeModules",
      "npm install",
      "npm run production",
      "@clearNodeModules"
    ],
    "clearNodeModules": "rm -rf node_modules"
  }
}
