{
  "name": "jazzman/wp-boilerplate",
  "type": "project",
  "license": "MIT",
  "description": "WordPress boilerplate with modern development tools, easier configuration, and an improved folder structure",
  "homepage": "https://roots.io/bedrock/",
  "authors": [
    {
      "name": "Scott Walkinshaw",
      "email": "scott.walkinshaw@gmail.com",
      "homepage": "https://github.com/swalkinshaw"
    },
    {
      "name": "Ben Word",
      "email": "ben@benword.com",
      "homepage": "https://github.com/retlehs"
    },
    {
      "name": "Vasyl Sokolyk",
      "email": "vsokolyk@gmail.com",
      "homepage": "https://github.com/Jazz-Man"
    }
  ],
  "keywords": [
    "bedrock", "composer", "roots", "wordpress", "wp", "wp-config"
  ],
  "support": {
    "issues": "https://github.com/roots/bedrock/issues",
    "forum": "https://discourse.roots.io/category/bedrock"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org",
      "only": ["wpackagist-plugin/*", "wpackagist-theme/*"]
    }
  ],
  "require": {
    "php": "^8.1",
    "jazzman/custom-post-type": "^3.3",
    "jazzman/php-robots": "^2.0",
    "jazzman/wp-app-config": "^2.3",
    "jazzman/wp-duplicate-post": "^1.1",
    "jazzman/wp-mail": "^2.0",
    "jazzman/wp-nav-menu-cache": "^0.3.0",
    "jazzman/wp-password-argon": "^0.1.0",
    "jazzman/wp-performance": "^3.4",
    "oscarotero/env": "^2.1",
    "roots/bedrock-autoloader": "^1.0",
    "roots/bedrock-disallow-indexing": "^2.0",
    "roots/wordpress": "^6.3",
    "roots/wp-config": "^1.0",
    "vlucas/phpdotenv": "^5.5"
  },
  "require-dev": {
    "jazzman/php-cs-fixer-rules": "^0.2.0",
    "lucatume/function-mocker": "^1.3",
    "lucatume/function-mocker-le": "^1.0",
    "lucatume/wp-browser": "^4.0",
    "lucatume/wp-snaphot-assertions": "^2.0",
    "roave/security-advisories": "@dev",
    "symfony/var-dumper": "^6.3"
  },
  "config": {
    "sort-packages": true,
    "preferred-install": "dist",
    "optimize-autoloader": true,
    "classmap-authoritative": true,
    "apcu-autoloader": true,
    "allow-plugins": {
      "composer/installers": true,
      "roots/wordpress-core-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  },
  "autoload": {
    "psr-4": {
      "JazzMan\\Themes\\":"web/app/themes/boilerplate/includes"
    },
    "files": [
      "web/app/themes/boilerplate/includes/helper.php"
    ]
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "deploy": [
      "@clearNodeModules",
      "npm install",
      "npm run production",
      "@clearNodeModules"
    ],
    "clearNodeModules": "rm -rf node_modules"
  }
}
